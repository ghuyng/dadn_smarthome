<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.smarthome">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.SmartHome">

        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/Theme.SmartHome.NoActionBar" />
        <activity
            android:name=".git "
            android:label="@string/app_name"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />

        <activity
            android:name=".SetAutoModeActivity"
            android:parentActivityName=".ViewDeviceActivity"
            android:theme="@style/Theme.MaterialComponents.NoActionBar"/>
        <activity
            android:name=".SetTurnOnOffTimeActivity"
            android:parentActivityName=".ViewDeviceActivity"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity android:name=".DevicereportActivity"></activity>
        <activity android:name=".ReportActivity" />
        <activity
            android:name=".ViewDeviceActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="org.eclipse.paho.android.service.MqttService" />
    </application>
</manifest>