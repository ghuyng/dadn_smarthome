    <ImageButton
        android:id="@+id/setting_time_back_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/setting_time_blank_space"
        app:layout_constraintEnd_toStartOf="@+id/setting_time_blank_space"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256"
        app:srcCompat="@drawable/ic_backbtn" />

    <TextView
        android:id="@+id/setting_time_tv_title"
        android:layout_width="166dp"
        android:layout_height="57dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="165dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:text="Schedule"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/setting_time_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setting_time_back_button"
        app:layout_constraintVertical_bias="0.72"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Schedule"
        android:textColor="#FDA43C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/setting_time_state_switch"
        app:layout_constraintEnd_toStartOf="@+id/setting_time_state_switch"
        app:layout_constraintHorizontal_bias="0.587"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/setting_time_state_switch"
        app:layout_constraintVertical_bias="0.391"></TextView>

